@model List<Author>

    <h3 class="text-center">Yazar Listeleme Sayfası</h3>

<a class="btn btn-primary mb-2 " style="float:right" asp-controller="Author" asp-action="Create">Yeni Ekle</a>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Aksiyon</th>

    </tr>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i+1)</td>
            <td>@Model[i].FirstName</td>
            <td>@Model[i].LastName</td>

            <td>

                    <a asp-controller="Author" asp-action="Edit" asp-route-id="@Model[i].Id">   <i class="bi bi-pencil-square">  </i>   </a>
                        <a asp-controoller="Author" asp-action="Delete" asp-route-id="@Model[i].Id">    <i class="bi bi-trash"></i>   </a>

            </td>
        </tr>
    }

</table>